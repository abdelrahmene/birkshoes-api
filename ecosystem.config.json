{
  "apps": [{
    "name": "birkshoes-api",
    "script": "dist/index.js",
    "cwd": "/var/www/birkshoes-api",
    "instances": 1,
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "production",
      "PORT": 4000
    },
    "log_file": "/var/log/pm2/birkshoes-api.log",
    "out_file": "/var/log/pm2/birkshoes-api-out.log",
    "error_file": "/var/log/pm2/birkshoes-api-error.log",
    "pid_file": "/var/run/birkshoes-api.pid",
    "max_memory_restart": "500M",
    "node_args": "--max-old-space-size=1024",
    "watch": false,
    "ignore_watch": ["node_modules", "logs"],
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}
