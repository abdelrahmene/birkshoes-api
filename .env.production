# Production Environment Variables
NODE_ENV=production
PORT=4000

# Database
DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/birkshoes_prod
DIRECT_URL=postgresql://your_db_user:your_db_password@localhost:5432/birkshoes_prod

# JWT & Security
JWT_SECRET=your-super-secure-jwt-secret-key-production
JWT_REFRESH_SECRET=your-super-secure-refresh-jwt-secret-key-production
ADMIN_SECRET=your-admin-secret-key-production

# CORS Origins
CLIENT_URL=https://birkshoes.store
ADMIN_URL=https://admin.birkshoes.store
API_URL=https://api.birkshoes.store

# File Upload
UPLOAD_PATH=/var/www/admin.birkshoes.store/public/uploads
MAX_FILE_SIZE=10485760

# Email (if needed)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Performance
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
